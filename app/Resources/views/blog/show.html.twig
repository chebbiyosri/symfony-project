{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blog</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Corps</th>
                <td>{{ blog.corps }}</td>
            </tr>
            <tr>
                <th>Dateedition</th>
                <td>{% if blog.dateEdition %}{{ blog.dateEdition|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blog.titre }}</td>
            </tr>
            <tr>
                <th>Dateexpiration</th>
                <td>{% if blog.dateExpiration %}{{ blog.dateExpiration|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statecode</th>
                <td>{{ blog.stateCode }}</td>
            </tr>
            <tr>
                <th>Dateedit</th>
                <td>{{ blog.dateEdit }}</td>
            </tr>
            <tr>
                <th>Datecreate</th>
                <td>{% if blog.dateCreate %}{{ blog.dateCreate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blog_edit', { 'id': blog.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
